{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Test Suite Schema",
  "type": "object",
  "properties": {
    "suite": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "parallel": { "type": "string", "enum": ["tests", "classes", "methods", "none"] },
        "thread_count": { "type": "integer", "minimum": 1 }
      },
      "required": ["name"]
    },
    "tests": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "parallel": { "type": "string", "enum": ["classes", "methods", "none"] },
          "thread_count": { "type": "integer", "minimum": 1 },
          "classes": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          }
        },
        "required": ["name", "classes"]
      }
    }
  },
  "required": ["suite", "tests"]
}
