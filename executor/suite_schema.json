{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Test Suite Schema",
  "type": "object",
  "properties": {
    "suite": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "parallel": { "type": "string", "enum": ["tests", "classes", "methods", "none"] },
        "thread_count": { "type": "integer", "minimum": 1 }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "tests": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "parallel": { "type": "string", "enum": ["classes", "methods", "none"] },
          "thread_count": { "type": "integer", "minimum": 1 },
          "classes": {
            "type": "array",
            "items": {
              "oneOf": [
                { "type": "string" },
                {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "methods": {
                      "type": "object",
                      "properties": {
                        "include": {
                          "type": "array",
                          "items": { "type": "string" },
                          "minItems": 1
                        },
                        "exclude": {
                          "type": "array",
                          "items": { "type": "string" },
                          "minItems": 1
                        }
                      },
                      "additionalProperties": false
                    }
                  },
                  "required": ["name"],
                  "additionalProperties": false
                }
              ]
            },
            "minItems": 1
          }
        },
        "required": ["name", "classes"],
        "additionalProperties": false
      }
    }
  },
  "required": ["suite", "tests"],
  "additionalProperties": false
}